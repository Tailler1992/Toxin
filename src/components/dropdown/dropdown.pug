include ../text-field/text-field
include ../heading/heading
include ../btn/btn

mixin dropdown(content, isBtn)
  .dropdown
    +text-field({
      type: 'text',
      name: 'dropdown-text',
      value: 'Сколько гостей',
      btnMore: true
    })
    .dropdown__blind
      each item in content
        .dropdown__row
          +heading({title: `${item.title}`})
          .dropdown__control
            button.dropdown__btn(data-minus) -
            span.dropdown__count=item.count
            button.dropdown__btn(data-plus) +
      if isBtn
        .dropdown__text-btns
          +btn({
            type: 'button',
            title: 'очистить',
            data: 'clear'
          }).btn_theme-no-wrapper
          +btn({
            type: 'button',
            title: 'применить',
            data: 'apply'
          }).btn_theme-no-wrapper
