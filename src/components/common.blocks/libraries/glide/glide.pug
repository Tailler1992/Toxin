mixin glide(options)
  - let className = options.glideBtnActive ? 'glide__arrows_visible' : '';

  .glide
    .glide__track(data-glide-el='track')
      ul.glide__slides
        each image in options.images
          - let imageName = image
          li.glide__slide
            img.glide__img(src=require(`../../components/common.blocks/cards/room-card/${imageName}.jpg`), alt=`room-${imageName}`)
    .glide__arrows(data-glide-el='controls' class=className)
      button.glide__arrow.glide__arrow--left(data-glide-dir="<")
        .glide__arrow--ico-left.material-icons expand_more
      button.glide__arrow.glide__arrow--right(data-glide-dir=">")
        .glide__arrow--ico-right.material-icons expand_more
    .glide__bullets(data-glide-el="controls[nav]")
      button.glide__bullet(data-glide-dir="=0")
      button.glide__bullet(data-glide-dir="=1")
      button.glide__bullet(data-glide-dir="=2")
      button.glide__bullet(data-glide-dir="=3")
