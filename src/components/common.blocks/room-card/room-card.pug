include ../../library.blocks/glide/glide
include ../room-info/room-info
include ../rating/rating

mixin room-card(options)
  .room-card
    .room-card__carousel
      +glide({
        images: options.images,
        glideBtnActive: options.glideBtnActive
      })
    .room-card__container
      .room-card__info
        +room-info({
          roomNumber: options.roomNumber,
          roomNumberSmall: options.roomNumberSmall,
          roomType: options.roomType,
          roomPrice: options.roomPrice
          })
      .room-card__rating
        +rating(options.roomRating)
        .room-card__row
          .room-card__total-reviews=options.totalReviews
          .room-card__text Отзывов
