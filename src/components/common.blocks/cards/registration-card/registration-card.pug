include ../../primitives/text-field/text-field
include ../../primitives/radio/radio
include ../../primitives/heading/heading
include ../../primitives/toggle/toggle
include ../../primitives/btn/btn

mixin registration-card(options = {})
  -
    const {
      action,
      method = 'POST',
      title = 'Регистрация аккаунта'
    } = options

  .registration-card
    form.registration-card__container(action=action, method=method)
      h1.registration-card__title=title
      .registration-card__name
        +text-field({type: 'text', name: 'registration-name', placeholder: 'Имя'})
      .registration-card__surname
        +text-field({type: 'text', name: 'registration-surname', placeholder: 'Фамилия'})
      .registration-card__gender
        +radio([
          {text: "Мужчина", checked: true},
          {text: "Женщина", checked: false}
        ])
      .registration-card__birth
        +heading({title: 'дата рождения'}).registration-card__sub-title
        +text-field({
          type: 'text',
          name: 'masked-field',
          placeholder: 'ДД.ММ.ГГГГ',
          data: 'text-mask',
        })
      .registration-card__authorization-data
        +heading({title: 'данные для входа в сервис'}).registration-card__sub-title
        +text-field({type: 'email', name: 'email', placeholder: 'Email'})
      .registration-card__authorization-data
        +text-field({ type: 'password', name: 'password', placeholder: 'Пароль'})
      .registration-card__mailing
        +toggle({text: 'Получать спецпредложения'})
      .registration-card__payment
        +btn({typeBtn: 'button', title: 'перейти к оплате'}).btn_theme-long
      .registration-card__entry
        p.registration-card__description
          | Уже есть аккаунт на Toxin
        +btn({
          typeBtn: 'link', href: '#', title: 'войти'
        }).btn_theme-hollow.registration-card__btn-enter
