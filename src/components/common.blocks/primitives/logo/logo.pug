mixin logo(color=false)
  .logo&attributes(attributes)
    if color
      img.logo__img_purple(
        src=require('../../components/common.blocks/primitives/logo/logo.svg'),
        alt='logo'
        )
    else
      img.logo__img(
        src= require('../../components/common.blocks/primitives/logo/logo-gray.svg'),
        alt='logo-gray'
        )
